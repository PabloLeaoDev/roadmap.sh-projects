        }

        .social-btn {
            padding: 0.75rem;
            border-radius: 50%;
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
