        .social-btn.twitter { background-color: #1da1f2; }
        .social-btn.linkedin { background-color: #0077b5; }
        .social-btn.whatsapp { background-color: #25d366; }
        .social-btn.email { background-color: #666; }

        .social-btn:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }

            .article-container {
                margin: 1.5rem auto;
                padding: 0 1rem;
            }

            .article-header,
            .article-content,
            .related-articles {
                padding: 2rem 1.5rem;
            }

            .article-title {
                font-size: 2rem;
            }

            .article-summary {
                font-size: 1.1rem;
            }

            .article-meta {
                flex-direction: column;
                gap: 0.5rem;
            }

            .article-stats {
                justify-content: center;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 300px;
                justify-content: center;
            }

            .related-grid {
                grid-template-columns: 1fr;
            }

            .social-buttons {
                gap: 0.5rem;
            }

            .social-btn {
                width: 45px;
                height: 45px;
                font-size: 1rem;
            }
        }

        /* Print Styles */
        @media print {
            .header,
            .breadcrumb,
            .article-actions,
            .share-buttons,
            .related-articles,
            .reading-progress {
                display: none !important;
            }

            body {
                background: white !important;
                color: black !important;
            }

            .article-container {
                max-width: none !important;
                margin: 0 !important;
                padding: 0 !important;
            }

            .article-header,
            .article-content {
                box-shadow: none !important;
                border: 1px solid #ddd;
            }
        }
    </style>
</head>
