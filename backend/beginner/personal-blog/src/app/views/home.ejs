<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Artigos e Not√≠cias</title>
    <link rel="stylesheet" href="/styles/home.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/home" class="logo">
                üìö MeuBlog
            </a>
            <nav class="nav-links">
                <a href="/home">In√≠cio</a>
                <a href="/home#articles">Artigos</a>
                <a href="/home#about">Sobre</a>
                <% if (user) { %>
                    <a href="/login" class="admin-btn">üîß Admin</a>
                    <a href="/logout">Sair</a>
                <% } else { %>
                    <a href="/login" class="admin-btn">Login</a>
                <% } %>
            </nav>
        </div>
    </header>

    <section class="hero">
        <div class="hero-content">
            <h1>Descubra Artigos Incr√≠veis</h1>
            <p>Explore conhecimento, inspire-se e mantenha-se atualizado com nossos artigos selecionados</p>
            
            <form class="search-box" action="/home" method="GET">
                <input 
                    type="text"
                    class="search-input"
                    name="search"
                    placeholder="Buscar artigos por t√≠tulo, categoria ou tag..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>"
                >
                <button type="submit" class="search-btn">üîç Buscar</button>
            </form>
        </div>
    </section>

    <main class="main-content">
        <div class="section-title">
            <h2 id="articles">
                <% if (typeof search !== 'undefined' && search) { %>
                    Resultados para "<%= search %>"
                <% } else if (typeof category !== 'undefined' && category) { %>
                    Categoria: <%= category %>
                <% } else { %>
                    √öltimos Artigos
                <% } %>
            </h2>
            <p>
                <%= posts && posts.length > 0 ? posts.length : 0 %> 
                <%= posts && posts.length === 1 ? 'artigo encontrado' : 'artigos encontrados' %>
            </p>
        </div>

        <!-- Filtros por Categoria -->
        <div class="filter-tabs">
            <a href="/home" class="filter-tab <%= (!category || category === '') ? 'active' : '' %>">
                üìã Todos
            </a>
            <a href="/home?category=Tecnologia" class="filter-tab <%= category === 'Tecnologia' ? 'active' : '' %>">
                üíª Tecnologia
            </a>
            <a href="/home?category=Educa√ß√£o" class="filter-tab <%= category === 'Educa√ß√£o' ? 'active' : '' %>">
                üìö Educa√ß√£o
            </a>
            <a href="/home?category=Sa√∫de" class="filter-tab <%= category === 'Sa√∫de' ? 'active' : '' %>">
                üè• Sa√∫de
            </a>
            <a href="/home?category=Neg√≥cios" class="filter-tab <%= category === 'Neg√≥cios' ? 'active' : '' %>">
                üíº Neg√≥cios
            </a>
            <a href="/home?category=Lifestyle" class="filter-tab <%= category === 'Lifestyle' ? 'active' : '' %>">
                üåü Lifestyle
            </a>
        </div>

        <!-- Grid de Artigos -->
        <% if (posts && posts.length > 0) { %>
            <div class="articles-grid">
                <% posts.forEach(function(post) { %>
                    <a class="article-card">
                        <div class="article-image">
                            <% if (post.category) { %>
                                <div class="article-category"><%= post.category %></div>
                            <% } %>
                            <!-- √çcone baseado na categoria -->
                            <% if (post.category === 'Tecnologia') { %>
                                üíª
                            <% } else if (post.category === 'Educa√ß√£o') { %>
                                üìö
                            <% } else if (post.category === 'Sa√∫de') { %>
                                üè•
                            <% } else if (post.category === 'Neg√≥cios') { %>
                                üíº
                            <% } else if (post.category === 'Lifestyle') { %>
                                üåü
                            <% } else { %>
                                üìÑ
                            <% } %>
                        </div>
                        
                        <div class="article-content">
                            <h3 class="article-title"><%= post.title %></h3>
                            
                            <% if (post.summary) { %>
                                <p class="article-summary">
                                    <%= post.summary.length > 120 ? post.summary.substring(0, 120) + '...' : post.summary %>
                                </p>
                            <% } else { %>
                                <p class="article-summary">
                                    <%= post.content.length > 120 ? post.content.substring(0, 120) + '...' : post.content %>
                                </p>
                            <% } %>
                            
                            <div class="article-meta">
                                <span class="article-author">üìù <%= post.author %></span>
                                <span class="article-date">
                                    <%= post.createdAt ? new Date(post.createdAt).toLocaleDateString('pt-BR') : 'Data n√£o dispon√≠vel' %>
                                </span>
                            </div>

                            <% if (post.tags) { %>
                                <div class="article-tags">
                                    <% post.tags.split(',').forEach(function(tag) { %>
                                        <% if (tag.trim()) { %>
                                            <span class="tag">#<%= tag.trim() %></span>
                                        <% } %>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </a>
                <% }); %>
            </div>

            <!-- Bot√£o Carregar Mais (opcional) -->
            <div class="load-more-container">
                <button class="load-more-btn" onclick="loadMoreArticles()">
                    üìñ Carregar mais artigos
                </button>
            </div>
        <% } else { %>
            <div class="no-articles">
                <div class="no-articles-icon">üìÑ</div>
                <h3>Nenhum artigo encontrado</h3>
                <% if (typeof search !== 'undefined' && search) { %>
                    <p>N√£o encontramos artigos correspondentes √† sua busca "<%= search %>".</p>
                    <p><a href="/home">Ver todos os artigos</a></p>
                <% } else if (typeof category !== 'undefined' && category) { %>
                    <p>N√£o h√° artigos na categoria "<%= category %>" no momento.</p>
                    <p><a href="/home">Ver todos os artigos</a></p>
                <% } else { %>
                    <p>Ainda n√£o h√° artigos publicados. Volte em breve!</p>
                <% } %>
            </div>
        <% } %>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-links">
                <a href="/home">In√≠cio</a>
                <a href="/home#articles">Artigos</a>
                <a href="#about">Sobre</a>
                <a href="/login">Login</a>
            </div>
            <p>&copy; <%= new Date().getFullYear() %> MeuBlog. Todos os direitos reservados.</p>
            <p>Feito com ‚ù§Ô∏è para compartilhar conhecimento</p>
        </div>
    </footer>

    <script>
        // Fun√ß√£o para carregar mais artigos (implementar conforme necess√°rio)
        function loadMoreArticles() {
            // Aqui voc√™ pode implementar pagina√ß√£o ou lazy loading
            alert('Funcionalidade de carregar mais artigos ser√° implementada!');
        }

        // Smooth scroll para links internos
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Highlight do termo de busca
        function highlightSearchTerm() {
            const searchTerm = '<%= typeof search !== "undefined" ? search : "" %>';
            if (searchTerm) {
                const regex = new RegExp(`(${searchTerm})`, 'gi');
                const elements = document.querySelectorAll('.article-title, .article-summary');
                
                elements.forEach(el => {
                    el.innerHTML = el.innerHTML.replace(regex, '<mark style="background-color: yellow; padding: 0.2rem;">$1</mark>');
                });
            }
        }

        // Chamar highlight ap√≥s DOM carregar
        document.addEventListener('DOMContentLoaded', highlightSearchTerm);
    </script>
</body>
</html>