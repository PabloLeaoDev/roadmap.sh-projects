<form hx-patch="/admin/post/edit/<%= post.id %>"
      hx-target="#post-row-<%= post.id %>"
      hx-swap="outerHTML"
      hx-indicator="#dashboard-loader"
      _="on htmx:afterRequest 
            if event.detail.successful
                call closeModal()
            end">
    
    <div class="form-group mb-3">
        <label for="title" class="form-label">Título *</label>
        <input type="text" 
               id="title" 
               name="title" 
               class="form-control" 
               maxlength="200" 
               value="<%= post.title %>"
               required>
        <div class="form-text">Máximo 200 caracteres</div>
    </div>

    <div class="form-group mb-3">
        <label for="summary" class="form-label">Resumo *</label>
        <textarea id="summary" 
                  name="summary" 
                  class="form-control" 
                  maxlength="500" 
                  rows="3"
                  required><%= post.summary %></textarea>
        <div class="form-text">Máximo 500 caracteres</div>
    </div>

    <div class="form-group mb-3">
        <label for="content" class="form-label">Conteúdo *</label>
        <textarea id="content" 
                  name="content" 
                  class="form-control" 
                  rows="10"
                  required><%= post.content %></textarea>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label for="category" class="form-label">Categoria *</label>
                <input type="text" 
                       id="category" 
                       name="category" 
                       class="form-control" 
                       value="<%= post.category %>"
                       required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label for="tags" class="form-label">Tags</label>
                <input type="text" 
                       id="tags" 
                       name="tags" 
                       class="form-control" 
                       value="<%= post.tags || '' %>">
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label for="status" class="form-label">Status</label>
        <select id="status" name="status" class="form-select">
            <option value="draft" <%= post.status === 'draft' ? 'selected' : '' %>>Rascunho</option>
            <option value="published" <%= post.status === 'published' ? 'selected' : '' %>>Publicado</option>
        </select>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
</form>